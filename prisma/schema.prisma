generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model League {
  id      Int      @id @default(autoincrement())
  name    String
  status  String   @default("Active")
  teams   Team[]
  matches Match[]
  players Player[]
  goals   Goal[]
}

model Team {
  id             Int      @id @default(autoincrement())
  name           String
  league         League   @relation(fields: [leagueId], references: [id], onDelete: Cascade)
  leagueId       Int
  players        Player[]
  matchesAsTeam1 Match[]  @relation("team1")
  matchesAsTeam2 Match[]  @relation("team2")
  goalsInFavor   Goal[]   @relation("scorer")
  goalsAgainst   Goal[]   @relation("receiver")
}

model Player {
  id       Int    @id @default(autoincrement())
  name     String
  lastName String
  number   Int
  league   League @relation(fields: [leagueId], references: [id], onDelete: Cascade)
  leagueId Int
  team     Team   @relation(fields: [teamId], references: [id], onDelete: Cascade)
  teamId   Int
  goals    Goal[]
}

model Match {
  id       Int    @id @default(autoincrement())
  league   League @relation(fields: [leagueId], references: [id], onDelete: Cascade)
  leagueId Int
  homeId   Int
  awayId   Int
  home     Team   @relation("team1", fields: [homeId], references: [id])
  away     Team   @relation("team2", fields: [awayId], references: [id])
  goals    Goal[]
  result   Int    @default(-1) //Pendant: -1, Draw: 0, otherwise winner team id  
  status   String @default("Pendant")
  matchday Int
  date     String @default("2022-03-17T19:00:00Z")
}

model Goal {
  id         Int    @id @default(autoincrement())
  league     League @relation(fields: [leagueId], references: [id], onDelete: Cascade)
  leagueId   Int
  match      Match  @relation(fields: [matchId], references: [id], onDelete: Cascade)
  matchId    Int
  player     Player @relation(fields: [playerId], references: [id])
  playerId   Int
  team       Team   @relation("scorer", fields: [teamId], references: [id])
  teamId     Int
  receiver   Team   @relation("receiver", fields: [receiverId], references: [id])
  receiverId Int
  quantity   Int    @default(0)
}
